<%= render 'case/case_header', view: :notes %>

<h2 class="h5 mt-3 mb-3 fw-bold">Notizen</h2>

<div class="row">
  <div class="col-4">
    <div class="list-group">
      <% @case.notes.each do |n| %>
        <a href="" class="list-group-item list-group-item-action">
          <p class="mb-1 fw-bold"><%= n.title %></p>
          <p class="mb-0 text-secondary fs-small">von <%= n.user.display_name %></p>
          <p class="mb-0 text-secondary fs-small">zuletzt am <%= n.updated_at.strftime("%d.%m.%Y %H:%M") %> bearbeitet</p>
        </a>
      <% end %>
    </div>
  </div>
  <div class="col-8">

  </div>
</div>