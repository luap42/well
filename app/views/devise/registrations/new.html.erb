<h1 class="h3 fw-bold mb-3"><%= t('.sign_up') %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-floating mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: '' %>
    <%= f.label :email %>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: '' %>
    <%= f.label :password %>

    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control', placeholder: '' %>
    <%= f.label :password_confirmation %>
  </div>

  <div class="mb-3 d-flex">
    <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
    <%= render 'devise/shared/links' %>
  </div>
<% end %>
