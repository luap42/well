<%= form_with url: form_to, model: task_column, method: :post do |form| %>
  <div class="form-floating mb-3">
    <%= form.text_field :title, class: 'form-control', placeholder: '' %>
    <%= form.label :title, 'Titel' %>
  </div>

  <div class="form-check mb-3">
    <%= form.check_box :is_enabled, class: 'form-check-input', checked: task_column.is_enabled %>
    <%= form.label :is_enabled, 'Spalte ist aktiviert' %>
  </div>

  <%= form.submit 'Speichern', class: 'btn btn-primary mb-3' %>
  <%= link_to 'Abbrechen', tasks_url(@case), class: 'btn btn-secondary mb-3' %>
<% end %>