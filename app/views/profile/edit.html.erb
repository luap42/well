<h1 class="fw-bold mb-3">Profil bearbeiten</h1>

<p class="mb-4"><%= link_to "Dokumententypen bearbeiten", edit_writing_types_url %></p>


<%= form_with url: update_profile_url, model: current_user, method: :post do |form| %>

  <div class="form-floating mb-3">
    <%= form.text_field :id, class: 'form-control', placeholder: '', disabled: true %>
    <%= form.label :id, 'Nutzer-ID' %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :full_name, class: 'form-control', placeholder: '' %>
    <%= form.label :full_name, 'Anzeigename/Vor- und Nachname' %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :shortcode, class: 'form-control', placeholder: '' %>
    <%= form.label :shortcode, 'KÃ¼rzel (sollte eindeutig sein)' %>
  </div>

  <div class="form-floating mb-3">
    <%= form.number_field :time_billing_factor_in_ct, class: 'form-control', placeholder: '' %>
    <%= form.label :time_billing_factor_in_ct, 'Stundenlohn (in 1ct, also 1 EUR = 100ct)' %>
  </div>

  <%= form.submit 'Speichern', class: 'btn btn-primary' %>
<% end %>